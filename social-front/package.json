{
  "name": "nextjs-template",
  "description": "Full-featured template for JAMstack websites using next.js",
  "repository": "github:jsulpis/nextjs-template",
  "license": "MIT",
  "author": "Julien Sulpis",
  "scripts": {
    "dev": "next src",
    "build": "yarn clean && next build src",
    "build:now": "yarn build && cp -r src/.next .next && cp -r src/public public",
    "export": "next export src",
    "start": "next start src",
    "clean": "rm -rf .next src/.next public src/out",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "analyze": "BUNDLE_ANALYZE=both yarn build",
    "analyze:server": "BUNDLE_ANALYZE=server yarn build",
    "analyze:browser": "BUNDLE_ANALYZE=browser yarn build"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "axios": "^0.21.1",
    "browserslist": "^4.16.6",
    "caniuse-lite": "^1.0.30001223",
    "dotenv": "^8.6.0",
    "isomorphic-unfetch": "^3.1.0",
    "next": "^9.5.5",
    "next-redux-wrapper": "^6.0.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-redux": "^7.2.4",
    "react-saga": "^0.3.1",
    "react-toastify": "^7.0.4",
    "redux": "^4.1.0",
    "redux-devtools-extension": "^2.13.9",
    "redux-saga": "^1.1.3",
    "tailwindcss": "^1.9.6"
  },
  "devDependencies": {
    "@testing-library/react": "^10.4.9",
    "@types/jest": "^25.1.5",
    "@types/node": "^13.13.51",
    "@types/react": "^16.14.6",
    "@types/react-dom": "^16.9.12",
    "@zeit/next-bundle-analyzer": "^0.1.2",
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-sass": "^1.0.1",
    "babel-core": "^6.26.3",
    "babel-jest": "^25.2.6",
    "husky": "^4.3.8",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.2.7",
    "next-fonts": "^1.5.1",
    "next-purgecss": "^4.0.0",
    "node-sass": "^4.13.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^2.0.2",
    "typescript": "^3.9.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
